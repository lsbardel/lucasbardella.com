{
  "name": "lucasbardella.com",
  "version": "1.0.0",
  "description": "Luca Sbardella Personal Website",
  "repository": "git@github.com:lsbardel/lucasbardella.com.git",
  "author": "Luca Sbardella <luca@quantmind.com>",
  "license": "ISC",
  "private": true,
  "scripts": {
    "lint": "eslint '*'",
    "fix": "eslint '*' --fix",
    "precommit": "lint-staged",
    "build:content": "export TS_NODE_PROJECT=content/ts_config.json && tsc",
    "compile": "metablock compile content",
    "build": "export NODE_ENV=production && yarn compile content && webpack",
    "watch": "npm-run-all --parallel watch:serve watch:compile",
    "watch:serve": "export NODE_ENV=development && webpack serve --progress",
    "watch:compile": "metablock compile content -w"
  },
  "dependencies": {
    "@loadable/component": "^5.15.2",
    "@metablock/cms": "^0.18.9",
    "@metablock/core": "^0.18.9",
    "@metablock/notebook": "^0.18.9",
    "@metablock/react": "^0.18.9",
    "@metablock/store": "^0.18.9"
  },
  "devDependencies": {
    "@metablock/cli": "^0.18.9",
    "@metablock/server": "^0.18.9",
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^13.3.0",
    "@types/loadable__component": "^5.13.4",
    "@types/marked": "^4.0.3",
    "@types/react": "^18.0.15",
    "@types/react-dom": "^18.0.6",
    "@types/react-helmet": "^6.1.5",
    "@types/react-router-dom": "^5.3.3",
    "@types/react-slick": "^0.23.10",
    "@types/webpack": "^5.28.0",
    "@typescript-eslint/eslint-plugin": "^5.31.0",
    "@typescript-eslint/parser": "^5.31.0",
    "css-loader": "^6.7.1",
    "eslint": "^8.21.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-jsx-a11y": "^6.6.1",
    "eslint-plugin-markdown": "^3.0.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.30.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "faker": "6.6.6",
    "file-loader": "^6.2.0",
    "husky": "^8.0.1",
    "identity-obj-proxy": "^3.0.0",
    "jest-fetch-mock": "^3.0.3",
    "lint-staged": "^13.0.3",
    "npm-run-all": "^4.1.5",
    "path-to-regexp": "6.2.1",
    "prettier": "^2.7.1",
    "prettier-plugin-organize-imports": "^3.0.0",
    "react-hot-loader": "4.13.0",
    "rollup": "^2.77.2",
    "rollup-plugin-svelte": "^7.1.0",
    "sass-loader": "^13.0.2",
    "shelljs": "0.8.5",
    "sinon": "^14.0.0",
    "source-map-loader": "^4.0.0",
    "style-loader": "^3.3.1",
    "svelte": "^3.49.0",
    "svg-inline-loader": "^0.8.2",
    "svgo": "^2.8.0",
    "terser-webpack-plugin": "^5.3.3",
    "ts-jest": "^28.0.7",
    "ts-loader": "9.3.1",
    "ts-node": "^10.9.1",
    "typescript": "^4.7.4",
    "url-loader": "^4.1.1",
    "webpack": "^5.74.0",
    "webpack-bundle-analyzer": "^4.5.0",
    "webpack-cli": "4.10.0",
    "webpack-dev-server": "^4.9.3",
    "webpack-hot-middleware": "^2.25.1",
    "webpack-require-from": "^1.8.6"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "yarn fix"
    ],
    "*.{json,css,scss}": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "post-commit": "git update-index --again"
    }
  }
}
