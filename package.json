{
  "name": "lucasbardella.com",
  "version": "1.0.0",
  "description": "Luca Sbardella Personal Website",
  "repository": "git@github.com:lsbardel/lucasbardella.com.git",
  "author": "Luca Sbardella <luca@quantmind.com>",
  "license": "ISC",
  "private": true,
  "scripts": {
    "lint": "eslint '*'",
    "fix": "eslint '*' --fix",
    "precommit": "lint-staged",
    "build:content": "export TS_NODE_PROJECT=content/ts_config.json && tsc",
    "compile": "metablock compile content",
    "build": "export NODE_ENV=production && yarn compile content && webpack",
    "dev": "webpack-dev-server",
    "watch": "npm-run-all --parallel watch:dev watch:compile",
    "watch:dev": "export NODE_ENV=development && webpack-dev-server -w",
    "watch:compile": "metablock compile content -w"
  },
  "dependencies": {
    "@loadable/component": "^5.14.1",
    "@metablock/cms": "^0.6.3",
    "@metablock/core": "^0.6.3",
    "@metablock/notebook": "^0.6.3",
    "@metablock/react": "^0.6.3",
    "@metablock/store": "^0.6.3"
  },
  "devDependencies": {
    "@metablock/cli": "^0.6.3",
    "@metablock/server": "^0.6.3",
    "@testing-library/jest-dom": "^5.11.5",
    "@testing-library/react": "^11.1.1",
    "@types/loadable__component": "^5.13.1",
    "@types/marked": "^1.1.0",
    "@types/react": "^16.9.56",
    "@types/react-dom": "^16.9.9",
    "@types/react-helmet": "^6.1.0",
    "@types/react-router-dom": "^5.1.6",
    "@types/react-slick": "^0.23.4",
    "@types/webpack": "^4.41.24",
    "@typescript-eslint/eslint-plugin": "^4.7.0",
    "@typescript-eslint/parser": "^4.7.0",
    "css-loader": "^5.0.1",
    "eslint": "^7.13.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-markdown": "^1.0.2",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.21.5",
    "eslint-plugin-react-hooks": "^4.2.0",
    "faker": "5.1.0",
    "file-loader": "^6.2.0",
    "has-flag": "^4.0.0",
    "husky": "^4.3.0",
    "identity-obj-proxy": "^3.0.0",
    "jest-fetch-mock": "^3.0.3",
    "lint-staged": "^10.5.1",
    "npm-run-all": "^4.1.5",
    "path-to-regexp": "6.2.0",
    "prettier": "^2.1.2",
    "react-hot-loader": "4.13.0",
    "rollup": "^2.33.1",
    "rollup-plugin-svelte": "^6.0.2",
    "sass-loader": "^10.0.5",
    "shelljs": "0.8.4",
    "sinon": "^9.2.1",
    "source-map-loader": "^1.1.2",
    "style-loader": "^2.0.0",
    "svelte": "^3.29.7",
    "svg-inline-loader": "^0.8.2",
    "svgo": "^1.3.2",
    "terser-webpack-plugin": "^5.0.3",
    "ts-jest": "^26.4.4",
    "ts-loader": "8.0.11",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.5",
    "url-loader": "^4.1.1",
    "webpack": "^5.4.0",
    "webpack-bundle-analyzer": "^4.1.0",
    "webpack-cli": "4.2.0",
    "webpack-dev-server": "^3.11.0",
    "webpack-hot-middleware": "^2.24.4",
    "webpack-require-from": "^1.8.2"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "yarn fix"
    ],
    "*.{json,css,scss}": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "post-commit": "git update-index --again"
    }
  }
}
