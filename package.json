{
  "name": "lucasbardella.com",
  "version": "1.0.0",
  "description": "Luca Sbardella Personal Website",
  "repository": "git@github.com:lsbardel/lucasbardella.com.git",
  "author": "Luca Sbardella <luca@quantmind.com>",
  "license": "ISC",
  "private": true,
  "scripts": {
    "lint": "eslint '*'",
    "fix": "eslint '*' --fix",
    "precommit": "lint-staged",
    "build:content": "export TS_NODE_PROJECT=content/ts_config.json && tsc",
    "compile": "metablock compile content",
    "build": "export NODE_ENV=production && yarn compile content && webpack",
    "watch": "npm-run-all --parallel watch:serve watch:compile",
    "watch:serve": "export NODE_ENV=development && webpack serve --progress",
    "watch:compile": "metablock compile content -w"
  },
  "dependencies": {
    "@loadable/component": "^5.15.2",
    "@metablock/core": "^0.21.1",
    "@metablock/notebook": "^0.21.1",
    "@metablock/react": "^0.21.1",
    "@metablock/store": "^0.21.1",
    "nodejs-polars": "^0.7.2"
  },
  "devDependencies": {
    "@metablock/cli": "^0.21.1",
    "@metablock/server": "^0.21.1",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@types/loadable__component": "^5.13.4",
    "@types/marked": "^4.0.8",
    "@types/react": "^18.0.26",
    "@types/react-dom": "^18.0.10",
    "@types/react-helmet": "^6.1.6",
    "@types/react-router-dom": "^5.3.3",
    "@types/react-slick": "^0.23.10",
    "@types/webpack": "^5.28.0",
    "@typescript-eslint/eslint-plugin": "^5.47.1",
    "@typescript-eslint/parser": "^5.47.1",
    "css-loader": "^6.7.3",
    "eslint": "^8.31.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-jsx-a11y": "^6.6.1",
    "eslint-plugin-markdown": "^3.0.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.31.11",
    "eslint-plugin-react-hooks": "^4.6.0",
    "faker": "6.6.6",
    "file-loader": "^6.2.0",
    "husky": "^8.0.2",
    "identity-obj-proxy": "^3.0.0",
    "jest-fetch-mock": "^3.0.3",
    "lint-staged": "^13.1.0",
    "npm-run-all": "^4.1.5",
    "path-to-regexp": "6.2.1",
    "prettier": "^2.8.1",
    "prettier-plugin-organize-imports": "^3.2.1",
    "react-hot-loader": "4.13.1",
    "rollup": "^3.9.1",
    "rollup-plugin-svelte": "^7.1.0",
    "sass-loader": "^13.2.0",
    "shelljs": "0.8.5",
    "sinon": "^15.0.1",
    "source-map-loader": "^4.0.1",
    "style-loader": "^3.3.1",
    "svelte": "^3.55.0",
    "svg-inline-loader": "^0.8.2",
    "svgo": "^3.0.2",
    "terser-webpack-plugin": "^5.3.6",
    "ts-jest": "^29.0.3",
    "ts-loader": "9.4.2",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4",
    "url-loader": "^4.1.1",
    "webpack": "^5.75.0",
    "webpack-bundle-analyzer": "^4.7.0",
    "webpack-cli": "5.0.1",
    "webpack-dev-server": "^4.11.1",
    "webpack-hot-middleware": "^2.25.3",
    "webpack-require-from": "^1.8.6"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "yarn fix"
    ],
    "*.{json,css,scss}": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "post-commit": "git update-index --again"
    }
  }
}
